{
    "kind": "collectionType",
    "collectionName": "pages",
    "info": {
        "name": "Page",
        "description": ""
    },
    "options": {
        "increments": true,
        "timestamps": true,
        "draftAndPublish": true
    },
    "attributes": {
        "slug": {
            "type": "string",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true
        },
        "content": {
            "type": "dynamiczone",
            "components": ["common-content.text-block"]
        },
        "parent": {
            "model": "page",
            "via": "children"
        },
        "children": {
            "collection": "page",
            "via": "parent"
        },
        "unlisted": {
            "type": "boolean",
            "default": false
        }
    }
}
